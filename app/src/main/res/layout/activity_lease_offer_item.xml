<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="2dp"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    tools:context="com.panda.solar.presentation.view.activities.LeaseOfferItem">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lease_item_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#616161"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="Lease Offer Name"/>

                <TextView
                    android:id="@+id/lease_item_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-light"
                    android:gravity="end"
                    android:text="LC254"/>

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/grey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Name"
                    android:textSize="13sp"
                    android:textColor="@color/gradStart"
                    android:layout_marginLeft="48dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:src="@mipmap/ic_panda_lp"
                        android:layout_height="40dp"/>

                    <TextView
                        android:id="@+id/lease_product_name"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:fontFamily="sans-serif"
                        android:textColor="#616161"
                        android:textSize="18sp"
                        android:layout_marginLeft="8dp"
                        android:text="Boom Box"/>

                </LinearLayout>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginLeft="48dp"
                    android:background="@color/grey"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lease Unit Cost"
                    android:textSize="13sp"
                    android:textColor="@color/gradStart"
                    android:layout_marginLeft="48dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:src="@mipmap/ic_panda_lu"
                        android:layout_height="40dp"/>

                    <TextView
                        android:id="@+id/lease_item_unitcost"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:fontFamily="sans-serif"
                        android:textColor="#616161"
                        android:textSize="18sp"
                        android:layout_marginLeft="8dp"
                        android:text="320,000 ugX"/>

                </LinearLayout>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginLeft="48dp"
                    android:background="@color/grey"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Initial Deposit"
                    android:textSize="13sp"
                    android:textColor="@color/gradStart"
                    android:layout_marginLeft="48dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:src="@mipmap/ic_panda_li"
                        android:layout_height="40dp"/>

                    <TextView
                        android:id="@+id/lease_initial_deposit"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:fontFamily="sans-serif"
                        android:textColor="#616161"
                        android:textSize="18sp"
                        android:layout_marginLeft="8dp"
                        android:text="100,000 ugX   30% payment"/>

                </LinearLayout>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginLeft="48dp"
                    android:background="@color/grey"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recurrent Payment"
                    android:textSize="13sp"
                    android:textColor="@color/gradStart"
                    android:layout_marginLeft="48dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:src="@mipmap/ic_panda_lr"
                        android:layout_height="40dp"/>

                    <TextView
                        android:id="@+id/lease_recur_payment"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:fontFamily="sans-serif"
                        android:textColor="#616161"
                        android:textSize="18sp"
                        android:layout_marginLeft="8dp"
                        android:text="50,000 ugX Monthly"/>

                </LinearLayout>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginLeft="48dp"
                    android:background="@color/grey"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#616161"
                    android:textSize="14sp"
                    android:text="Lease details"/>

                <TextView
                    android:id="@+id/lease_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:textSize="13sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:text="Describe the components that make
                    makeup the lease, the periiod of the lease offer and the conditions needed to acquire the lease loan"/>

            </LinearLayout>
        </LinearLayout>

</android.support.v7.widget.CardView>
