<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.panda.solar.presentation.view.activities.SaleDetail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/saledetail_type"
            android:layout_width="0dp"
            android:textSize="18sp"
            android:textColor="@color/dark_grey"
            android:fontFamily="sans-serif-light"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="SaleType"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/saledetail_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pending"
                android:gravity="end"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer"
            android:textSize="13sp"
            android:textColor="@color/gradStart"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/saledetail_customer_pic"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="4dp"
                android:background="@drawable/circle"
                android:src="@drawable/aaron"
                app:civ_border_color="@color/circleBorder"
                app:civ_border_width="4dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="14dp">

                <TextView
                    android:id="@+id/saledetail_customer_name"
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer Name"
                    android:fontFamily="sans-serif-light"
                    android:textSize="16sp"
                    android:textColor="#616161"/>

                <TextView
                    android:id="@+id/saledetail_customer_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer Location"
                    android:fontFamily="sans-serif-light"
                    android:textSize="15sp"
                    android:textColor="#616161"/>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="15dp"
            android:background="@color/grey"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product"
            android:textSize="13sp"
            android:textColor="@color/gradStart"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/saledetail_product_name"
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Name"
                    android:fontFamily="sans-serif-light"
                    android:textSize="16sp"
                    android:textColor="#616161"/>

                <TextView
                    android:id="@+id/saledetail_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="800,000 UGX"
                    android:fontFamily="sans-serif-light"
                    android:textSize="16sp"
                    android:textColor="#616161"/>

                <TextView
                    android:id="@+id/saledetail_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 pieces"
                    android:fontFamily="sans-serif-light"
                    android:textSize="16sp"
                    android:textColor="#616161"/>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="15dp"
            android:background="@color/grey"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agent  Commission"
            android:textSize="13sp"
            android:textColor="@color/gradStart"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/sale_agent_commission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="400,0000 UGX"
                    android:fontFamily="sans-serif-light"
                    android:textSize="16sp"
                    android:textColor="#616161"/>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="15dp"
            android:background="@color/grey"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="13sp"
            android:textColor="@color/gradStart"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/saledetail_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22 Febuary 2020"
                    android:fontFamily="sans-serif-light"
                    android:textSize="16sp"
                    android:textColor="#616161"/>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="15dp"
            android:background="@color/grey"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="13sp"
            android:textColor="@color/gradStart"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/saledetail_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:fontFamily="sans-serif-light"
                    android:textSize="15sp"
                    android:textColor="#616161"/>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="15dp"
            android:background="@color/grey"/>



        <android.support.design.button.MaterialButton
            android:id="@+id/saledetail_approve_btn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            style="@style/Widget.MaterialComponents.Button"
            android:text="APPROVE"
            app:cornerRadius="5dp"
            app:backgroundTint="@color/colorPrimary"/>

    </LinearLayout>

</LinearLayout>
