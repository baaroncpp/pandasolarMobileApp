<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.panda.solar.presentation.view.activities.DirectSale">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Make Direct Sale"
            android:fontFamily="sans-serif"
            android:textColor="#616161"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp"/>

        <android.support.design.button.MaterialButton
            android:id="@+id/scanner_button"
            android:layout_width="match_parent"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_height="60dp"
            app:icon="@drawable/ic_search_black_24dp"
            android:layout_marginBottom="8dp"
            android:outlineSpotShadowColor="@color/grey"
            android:text="Scan Serial Number"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/serialnumber_text_wrapper"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_marginBottom="8dp"
            android:outlineSpotShadowColor="@color/grey"
            android:layout_height="55dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/serialnumber_text_field"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="SerialNumber" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.button.MaterialButton
            android:id="@+id/add_product_button"
            android:layout_width="match_parent"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_height="60dp"
            app:icon="@drawable/ic_add_product"
            android:fontFamily="sans-serif"
            android:textSize="14sp"
            android:outlineSpotShadowColor="@color/grey"
            android:text="Add Product"/>

        <android.support.design.button.MaterialButton
            android:fontFamily="sans-serif"
            android:textSize="14sp"
            android:id="@+id/add_customer_button"
            android:layout_width="match_parent"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_height="60dp"
            app:icon="@drawable/ic_person_add_black_24dp"
            android:outlineSpotShadowColor="@color/grey"
            android:text="Add Customer"/>

        <android.support.design.button.MaterialButton
            android:id="@+id/set_location_button"
            android:layout_width="match_parent"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:fontFamily="sans-serif"
            android:textSize="14sp"
            android:layout_height="60dp"
            app:icon="@drawable/ic_location_on_black_24dp"
            android:outlineSpotShadowColor="@color/grey"
            android:text="Set Location"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:outlineProvider="bounds"
            android:outlineSpotShadowColor="@color/grey"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:text="Quantity"/>

            <!--
            <com.michaelmuenzer.android.scrollablennumberpicker.ScrollableNumberPicker
                android:id="@+id/number_picker_horizontal"
                android:layout_weight="2"
                android:layout_width="0dp"
                app:snp_maxValue="10"
                app:snp_minValue="1"
                app:snp_scrollEnabled="true"
                app:snp_updateInterval="25"
                app:snp_value_text_size="16sp"
                app:snp_buttonIconLeft="@drawable/left_arrow"
                app:snp_buttonIconRight="@drawable/right_arrow"
                app:snp_orientation="horizontal"
                app:snp_buttonTouchScaleFactor="0.8"
                app:snp_value_text_appearance="?android:attr/textAppearanceMedium"
                android:layout_height="wrap_content"/>
            -->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/left_arrow"
                    android:clickable="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="10"
                    android:gravity="center_vertical"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#616161"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:clickable="true"
                    android:layout_height="wrap_content"
                    android:src="@drawable/right_arrow"/>

            </LinearLayout>

        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/description_text_input"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_marginBottom="16dp"
            android:outlineSpotShadowColor="@color/grey"
            android:layout_height="55dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/n"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:lines="3"
                android:maxLines="3"
                android:minLines="1"
                android:hint="Description" />
        </android.support.design.widget.TextInputLayout>

        <!--<biz.kasual.materialnumberpicker.MaterialNumberPicker
            android:rotationX="90"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:npMinValue="1"
            app:npMaxValue="50"
            app:npDefaultValue="10"
            app:npSeparatorColor="@color/grey"
            app:npTextColor="#616161"
            app:npTextSize="16sp"/> -->

        <android.support.design.button.MaterialButton
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            style="@style/Widget.MaterialComponents.Button"
            android:text="Submit Sale"
            app:cornerRadius="4dp"
            app:backgroundTint="@color/colorPrimary"/>


    </LinearLayout>



</LinearLayout>
