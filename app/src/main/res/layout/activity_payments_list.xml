<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.panda.solar.presentation.view.activities.PaymentsList">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/payments_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/recycler_error_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_do_not_icon"
            android:scaleType="fitCenter"
            android:layout_marginBottom="10dp"
            android:layout_centerInParent="true"/>

        <TextView
            android:layout_below="@+id/recycler_error_image"
            android:visibility="gone"
            android:id="@+id/payment_error_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="error!!!"
            android:textSize="18sp"
            android:fontFamily="sans-serif-light"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</LinearLayout>
