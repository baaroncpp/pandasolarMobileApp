<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.panda.solar.presentation.view.fragments.InstallationLocationFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/layout_margin">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/layout_margin"
            android:textSize="16sp"
            android:gravity="center"
            android:text="@string/get_location_coord_installation"/>



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/generic_button_bg"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:id="@+id/search_location_button"
            android:text="@string/search_location"/>



    </RelativeLayout>

</FrameLayout>
